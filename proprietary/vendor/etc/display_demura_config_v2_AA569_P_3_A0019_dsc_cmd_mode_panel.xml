<root>
    <!-- must update version when you commit this file -->
    <version>20240901</version>
    <enable>true</enable>

    <dbv_monitor>true</dbv_monitor>

    <!-- pwm: 3+18, bind_point max count:10, must sorted, the last one must be 4096 -->
    <pwm_bind_points>
        <!-- 10nit -->
        <bind_point id="0" bin_id="0">375</bind_point>
        <!-- 100nit -->
        <bind_point id="1" bin_id="2">1769</bind_point>
        <!-- sentinel value -->
        <bind_point id="2" bin_id="3">4096</bind_point>
    </pwm_bind_points>

    <!-- dc1: 1+18, bind_point max count:10, must sorted, the last one must be 4096 -->
    <dc1_bind_points>
        <!-- 10nit -->
        <bind_point id="0" bin_id="0">375</bind_point>
        <!-- 100nit -->
        <bind_point id="1" bin_id="2">1769</bind_point>
        <!-- sentinel value -->
        <bind_point id="2" bin_id="3">4096</bind_point>
    </dc1_bind_points>

    <!-- dc2: 1+1, bind_point max count:10, must sorted, the last one must be 4096 -->
    <dc2_bind_points>
        <!-- 10nit -->
        <bind_point id="0" bin_id="1">375</bind_point>
        <!-- 100nit -->
        <bind_point id="1" bin_id="2">1769</bind_point>
        <!-- sentinel value -->
        <bind_point id="2" bin_id="3">4096</bind_point>
    </dc2_bind_points>

</root>
